<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="com.qzy.tt.phone.fragment.StateFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/txt_server_state"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="手机-天通猫连接状态："
            />


        <TextView
        android:id="@+id/txt_tt_server_state"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="天通猫-卫星连接状态："
        />

        <TextView
            android:id="@+id/txt_ip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="本机ip:"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp">

            <EditText
                android:id="@+id/et_db_value"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:text="5"
                />

            <Button
                android:id="@+id/btn_set_db"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="设置"
                />

        </LinearLayout>

        <Button
            android:id="@+id/btn_recorder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="开始录音"
            />






    </LinearLayout>

</FrameLayout>
