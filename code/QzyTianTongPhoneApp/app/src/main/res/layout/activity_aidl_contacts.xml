<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.tt.qzy.view.activity.AidlContactsActivity">

    <include layout="@layout/status_bar"/>

    <include layout="@layout/toobar_layout"/>

    <include layout="@layout/line_dimens"/>

    <ScrollView
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="123dp">

                <ImageView
                    android:id="@+id/mine"
                    android:src="@drawable/mine_default_avatar"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="24dp"
                    android:layout_width="53dp"
                    android:layout_height="53dp"/>

                <TextView
                    android:id="@+id/userName"
                    android:layout_below="@+id/mine"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="8dp"
                    android:text="A-测试1"
                    android:textSize="16sp"
                    android:textColor="#333333"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/record"
                android:orientation="vertical"
                android:paddingLeft="15dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="48dp">

                <TextView
                    android:id="@+id/phoneNumber"
                    android:text="181-2644-0000"
                    android:textSize="16sp"
                    android:textColor="#F95972"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="14dp">

                    <TextView
                        android:id="@+id/addres"
                        android:text="广东深圳"
                        android:textSize="10sp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginTop="2dp"
                        android:layout_width="wrap_content"
                        android:layout_height="14dp"/>

                    <TextView
                        android:layout_width="0.8dp"
                        android:layout_marginTop="1dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="7dp"
                        android:background="@color/line_bg"
                        android:layout_height="10dp"/>

                    <TextView
                        android:id="@+id/time"
                        android:text="响铃9秒"
                        android:textSize="10sp"
                        android:layout_marginLeft="7dp"
                        android:layout_marginTop="2dp"
                        android:layout_gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="14dp"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="8dp"
                android:background="@color/white"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="48dp">

                <TextView
                    android:text="@string/TMT_email"
                    android:textSize="13sp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="15dp"
                    android:textColor="#333333"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/email"
                    android:textSize="13sp"
                    android:textColor="#333333"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="17dp"
                    android:text="181264440000@163.com"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <TextView
                android:layout_marginLeft="15dp"
                android:background="@color/line_bg"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

            <LinearLayout
                android:background="@color/white"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="48dp">

                <TextView
                    android:text="@string/TMT_QQ"
                    android:textSize="13sp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="15dp"
                    android:textColor="#333333"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/qq"
                    android:textSize="13sp"
                    android:textColor="#333333"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="17dp"
                    android:text="181264440000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recyclerView"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                </android.support.v7.widget.RecyclerView>

            </RelativeLayout>

            <TextView
                android:id="@+id/loding_more"
                android:text="@string/TMT_loding_more"
                android:textSize="10sp"
                android:textColor="#666666"
                android:gravity="center"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="38dp"/>

            <TextView
                android:id="@+id/take_up"
                android:text="@string/TMT_takeup"
                android:textSize="10sp"
                android:textColor="#666666"
                android:gravity="center"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="38dp"/>

            <TextView
                android:id="@+id/send"
                android:text="@string/TMT_sendMessage"
                android:textSize="13sp"
                android:gravity="center_vertical"
                android:layout_gravity="center_vertical"
                android:textColor="#2A9ACC"
                android:layout_marginLeft="15dp"
                android:layout_width="match_parent"
                android:layout_height="48dp"/>


        </LinearLayout>

    </ScrollView>

</LinearLayout>

