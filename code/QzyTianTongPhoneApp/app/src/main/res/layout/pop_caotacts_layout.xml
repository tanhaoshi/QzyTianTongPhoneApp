<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:id="@+id/layout" android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

    <TextView
        android:id="@+id/main_location"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:drawablePadding="20dp"
        android:gravity="center_vertical"
        android:paddingLeft="16dp"
        android:drawableRight="@drawable/wufalianjie_close"
        android:paddingRight="17dp"
        />

    <TextView
        android:id="@+id/contacts_editor"
        android:layout_below="@+id/main_location"
        android:layout_marginLeft="13dp"
        android:text="@string/TMT_editor_caotacts"
        android:gravity="center_vertical"
        android:textColor="@color/black"
        android:layout_width="match_parent"
        android:layout_height="48dp"/>

    <TextView
        android:id="@+id/line1"
        android:layout_below="@+id/contacts_editor"
        android:layout_marginLeft="13dp"
        android:layout_marginRight="13dp"
        android:background="@color/line_bg"
        android:layout_width="match_parent"
        android:layout_height="0.8dp"/>

    <TextView
        android:id="@+id/delete"
        android:layout_below="@+id/line1"
        android:text="@string/TMT_delete"
        android:textSize="13sp"
        android:layout_marginLeft="13dp"
        android:gravity="center_vertical"
        android:textColor="@color/black"
        android:layout_width="match_parent"
        android:layout_height="48dp"/>

    <TextView
        android:id="@+id/line2"
        android:layout_below="@id/delete"
        android:layout_marginLeft="13dp"
        android:layout_marginRight="13dp"
        android:background="@color/line_bg"
        android:layout_width="match_parent"
        android:layout_height="0.8dp"/>

    <TextView
        android:id="@+id/delete_all"
        android:layout_below="@+id/line2"
        android:text="@string/TMT_delete_all"
        android:textSize="13sp"
        android:layout_marginLeft="13dp"
        android:gravity="center_vertical"
        android:textColor="@color/black"
        android:layout_width="match_parent"
        android:layout_height="48dp"/>

</RelativeLayout>