<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/statusLayout"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="38dp">

    <com.tt.qzy.view.layout.BatteryView
        android:id="@+id/img1"
        android:layout_width="25dp"
        android:layout_alignParentRight="true"
        android:layout_height="12dp"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        app:batteryPower="70"
        app:batteryOrientation="horizontal"/>

    <ImageView
        android:id="@+id/img2"
        android:src="@drawable/sim_noconnect"
        android:layout_centerVertical="true"
        android:layout_marginRight="8dp"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_toLeftOf="@+id/img1"
        />

    <ImageView
        android:id="@+id/img3"
        android:src="@drawable/signal_noconnect"
        android:layout_marginRight="8dp"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/img2"
        android:layout_width="19dp"
        android:layout_height="18dp"/>

    <ImageView
        android:id="@+id/img4"
        android:visibility="gone"
        android:src="@drawable/phone_nonetwork"
        android:layout_centerVertical="true"
        android:layout_marginRight="6dp"
        android:layout_toLeftOf="@+id/img3"
        android:layout_width="28dp"
        android:layout_height="18dp"/>

    <ImageView
        android:id="@+id/img5"
        android:src="@drawable/search_nonerwork"
        android:layout_marginRight="6dp"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/img4"
        android:layout_width="28dp"
        android:layout_height="20dp"/>

</RelativeLayout>