<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/statusLayout"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="34dp">

    <TextView
        android:id="@+id/percent"
        android:textSize="12sp"
        android:text=""
        android:textColor="@color/white"
        android:layout_marginRight="10dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <com.tt.qzy.view.layout.BatteryView
        android:id="@+id/img1"
        android:layout_width="25dp"
        android:layout_height="12dp"
        android:layout_centerVertical="true"
        android:layout_marginRight="5dp"
        android:rotation="-180"
        app:batteryColor="@color/white"
        app:batteryPower="0"
        app:batteryOrientation="horizontal"
        android:layout_toLeftOf="@+id/percent"/>

    <ImageView
        android:id="@+id/img2"
        android:src="@drawable/sim_noconnect"
        android:layout_centerVertical="true"
        android:layout_marginRight="8dp"
        android:layout_width="13dp"
        android:layout_height="13dp"
        android:layout_toLeftOf="@+id/img1"
        />

    <ImageView
        android:id="@+id/img3"
        android:src="@drawable/signal_noconnect"
        android:layout_marginRight="8dp"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/img2"
        android:layout_width="13dp"
        android:layout_height="12dp"/>

    <ImageView
        android:id="@+id/img5"
        android:src="@drawable/search_nonerwork"
        android:layout_marginRight="6dp"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/img3"
        android:layout_width="22dp"
        android:layout_height="12dp"/>

    <ImageView
        android:id="@+id/img4"
        android:visibility="gone"
        android:layout_centerVertical="true"
        android:layout_marginRight="6dp"
        android:layout_toLeftOf="@+id/img5"
        android:src="@drawable/data_traffic"
        android:layout_width="22dp"
        android:layout_height="12dp"/>

</RelativeLayout>