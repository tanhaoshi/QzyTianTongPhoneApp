<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:background="@color/white"
                android:focusable="false"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

  <include layout="@layout/line_dimens"/>

    <RadioGroup
        android:id="@+id/groupId"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="6dp"
        android:checkedButton="@+id/tab_main">

        <RadioButton
            android:id="@+id/tab_main"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center"
            android:drawablePadding="4dp"
            android:text="主页"
            android:textSize="12sp"
            android:textColor="@color/tab_text_color"
            android:drawableTop="@drawable/tabpager_main_selector"/>

        <RadioButton
            android:id="@+id/tab_aidl"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center"
            android:drawablePadding="4dp"
            android:text="拨号"
            android:textSize="12sp"
            android:textColor="@color/tab_text_color"
            android:drawableTop="@drawable/tabpager_aidl_selector"/>

        <RadioButton
            android:id="@+id/tab_messager"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="短信"
            android:textColor="@color/tab_text_color"
            android:textSize="12sp"
            android:button="@null"
            android:gravity="center"
            android:drawablePadding="4dp"
            android:drawableTop="@drawable/tabpager_messager_selector"/>

        <RadioButton
            android:id="@+id/tab_mail"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center"
            android:drawablePadding="4dp"
            android:text="通讯录"
            android:textSize="12sp"
            android:textColor="@color/tab_text_color"
            android:drawableTop="@drawable/tabpager_mail_selector"/>

    </RadioGroup>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#00000000"
        android:orientation="horizontal">

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#00000000"
            android:visibility="invisible" />

        <Button
            android:id="@+id/putOut"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:visibility="invisible" />

        <Button
            android:id="@+id/shortMessage"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#00000000"
            android:visibility="invisible" />

        <Button
            android:id="@+id/basic"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:visibility="invisible" />

    </LinearLayout>


</FrameLayout>