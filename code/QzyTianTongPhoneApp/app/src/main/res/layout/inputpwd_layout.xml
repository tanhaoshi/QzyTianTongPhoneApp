<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
                android:focusable="true"
                android:focusableInTouchMode="true"
    android:background="@color/phoneNumber"
    android:orientation="vertical">

      <com.tt.qzy.view.layout.DigitsEditText
          android:gravity="center"
          android:id="@+id/inputContent"
          android:layout_width="match_parent"
          android:layout_height="66dp"
          android:layout_gravity="center_vertical"
          android:background="@null"
          android:hint="@string/TMT_hantInput"
          android:textSize="16sp"/>

       <LinearLayout
           android:orientation="horizontal"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">

           <LinearLayout
               android:id="@+id/one"
               android:layout_marginLeft="7dp"
               android:background="@color/white"
               android:layout_weight="1"
               android:gravity="center"
               android:orientation="vertical"
               android:layout_width="wrap_content"
               android:layout_height="57dp">

               <TextView
                   android:text="1"
                   android:textColor="#999999"
                   android:textSize="27sp"
                   android:layout_width="match_parent"
                   android:gravity="center"
                   android:layout_height="wrap_content"/>

               <ImageView
                   android:src="@drawable/ic_dial_action_vm"
                   android:layout_width="24dp"
                   android:gravity="center"
                   android:layout_height="18dp"/>

           </LinearLayout>

           <LinearLayout
               android:id="@+id/two"
               android:layout_marginLeft="7dp"
               android:background="@color/white"
               android:layout_weight="1"
               android:gravity="center"
               android:orientation="vertical"
               android:layout_width="wrap_content"
               android:layout_height="57dp">

               <TextView
                   android:text="2"
                   android:textColor="#999999"
                   android:textSize="27sp"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"/>

               <TextView
                   android:text="ABC"
                   android:textSize="12sp"
                   android:layout_width="24dp"
                   android:layout_height="18dp"/>

           </LinearLayout>

           <LinearLayout
               android:id="@+id/three"
               android:layout_marginLeft="7dp"
               android:layout_marginRight="7dp"
               android:background="@color/white"
               android:layout_weight="1"
               android:gravity="center"
               android:orientation="vertical"
               android:layout_width="wrap_content"
               android:layout_height="57dp">

               <TextView
                   android:text="3"
                   android:textColor="#999999"
                   android:textSize="27sp"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"/>

               <TextView
                   android:text="DEF"
                   android:textSize="12sp"
                   android:layout_width="24dp"
                   android:layout_height="18dp"/>

           </LinearLayout>

       </LinearLayout>

    <LinearLayout
        android:layout_marginTop="7dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/four"
            android:layout_marginLeft="7dp"
            android:background="@color/white"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="57dp">

            <TextView
                android:text="4"
                android:textColor="#999999"
                android:textSize="27sp"
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="wrap_content"/>

            <TextView
                android:text="GHI"
                android:layout_width="24dp"
                android:gravity="center"
                android:layout_height="18dp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/five"
            android:layout_marginLeft="7dp"
            android:background="@color/white"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="57dp">

            <TextView
                android:text="5"
                android:textColor="#999999"
                android:textSize="27sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:text="ABC"
                android:textSize="12sp"
                android:layout_width="24dp"
                android:layout_height="18dp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/six"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="7dp"
            android:background="@color/white"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="57dp">

            <TextView
                android:text="6"
                android:textColor="#999999"
                android:textSize="27sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:text="DEF"
                android:textSize="12sp"
                android:layout_width="24dp"
                android:layout_height="18dp"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/seven"
        android:layout_marginTop="7dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_marginLeft="7dp"
            android:background="@color/white"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="57dp">

            <TextView
                android:text="7"
                android:textColor="#999999"
                android:textSize="27sp"
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="wrap_content"/>

            <TextView
                android:text="PQRS"
                android:layout_width="100dp"
                android:gravity="center"
                android:layout_height="18dp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/eight"
            android:layout_marginLeft="7dp"
            android:background="@color/white"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="57dp">

            <TextView
                android:text="8"
                android:textColor="#999999"
                android:textSize="27sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:text="TUV"
                android:gravity="center"
                android:textSize="12sp"
                android:layout_width="100dp"
                android:layout_height="18dp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/nine"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="7dp"
            android:background="@color/white"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="57dp">

            <TextView
                android:text="9"
                android:textColor="#999999"
                android:textSize="27sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:text="WXYZ"
                android:gravity="center"
                android:textSize="12sp"
                android:layout_width="100dp"
                android:layout_height="18dp"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="7dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

            <TextView
                android:id="@+id/start"
                android:text="*"
                android:layout_marginLeft="7dp"
                android:background="@color/white"
                android:textColor="#999999"
                android:textSize="27sp"
                android:layout_weight="1"
                android:layout_width="30dp"
                android:gravity="center"
                android:layout_height="57dp"/>

            <TextView
                android:id="@+id/zero"
                android:layout_marginLeft="7dp"
                android:text="0"
                android:background="@color/white"
                android:gravity="center"
                android:layout_weight="1"
                android:textColor="#999999"
                android:textSize="27sp"
                android:layout_width="30dp"
                android:layout_height="57dp"/>

            <TextView
                android:id="@+id/jinghao"
                android:text="#"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="7dp"
                android:gravity="center"
                android:background="@color/white"
                android:layout_weight="1"
                android:textColor="#999999"
                android:textSize="27sp"
                android:layout_width="30dp"
                android:layout_height="57dp"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="77dp">

        <ImageView
            android:id="@+id/software"
            android:src="@drawable/shuzijianpan_gray"
            android:layout_weight="1"
            android:layout_width="30dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/tellphone"
            android:src="@drawable/bohao_big_blue"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:layout_width="30dp"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/clear"
            android:src="@drawable/delete"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:layout_width="30dp"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</LinearLayout>
