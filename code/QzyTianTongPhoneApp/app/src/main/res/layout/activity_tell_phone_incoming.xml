<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_tonghua"
    android:orientation="vertical"
    tools:context="com.tt.qzy.view.activity.TellPhoneActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="5"
        android:orientation="vertical"
        >

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="50dp"
            android:src="@drawable/mine_default_avatar"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:text="陌生联系人"
            android:textColor="@color/white"
            android:textSize="18sp"/>

        <!--<LinearLayout-->
        <!--android:layout_marginTop="7dp"-->
        <!--android:orientation="horizontal"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="19dp">-->

        <!--<TextView-->
        <!--android:visibility="gone"-->
        <!--android:text="广东深圳"-->
        <!--android:textColor="@color/white"-->
        <!--android:gravity="end"-->
        <!--android:layout_centerHorizontal="true"-->
        <!--android:layout_marginRight="12dp"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"/>-->

        <TextView
            android:id="@+id/txtv_phoneNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:text=""
            android:textColor="@color/white"/>

        <!--</LinearLayout>-->


    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/dimen_dp_66"
        android:layout_marginRight="@dimen/dimen_dp_66"
        android:paddingBottom="@dimen/dimen_dp_45"
        android:layout_weight="3"

        >

        <ImageView
            android:id="@+id/btn_accept"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|left"
            android:src="@drawable/bohao_big_blue"
            />


        <ImageView
            android:id="@+id/btn_endcall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:src="@drawable/bohao_big_red"
            />

    </FrameLayout>

</LinearLayout>
