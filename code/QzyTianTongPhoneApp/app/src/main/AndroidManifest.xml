<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.tt.qzy.view">

    <uses-permission android:name="android.permission.VIBRATE"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.RECORD_AUDIO"/>
    <uses-permission android:name="android.permission.MODIFY_AUDIO_SETTINGS"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <!--允许访问网络状态的权限-->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <!--允许修改网络状态的权限-->
    <uses-permission android:name="android.permission.CHANGE_NETWORK_STATE"/>
    <!--允许修改 WIFI 状态的权限。-->
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE"/>
    <!--允许访问 WIFI 状态的权限-->
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>

    <application
        android:name=".application.TtPhoneApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/CommonViewStyle">
        <meta-data
            android:name="design_width_in_dp"
            android:value="360"/>
        <meta-data
            android:name="design_height_in_dp"
            android:value="640"/>
        <activity
            android:name=".MainActivity"
            android:configChanges="orientation">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.UserEditorsActivity"
            android:theme="@style/CommonViewStyle">
        </activity>
        <activity
            android:name=".activity.SettingsActivity"
            android:theme="@style/CommonViewStyle">
        </activity>
        <activity
            android:name=".activity.OffLineMapActivity"
            android:theme="@style/CommonViewStyle">
        </activity>
        <activity
            android:name=".activity.MainAboutActivity"
            android:theme="@style/CommonViewStyle">
        </activity>
        <activity
            android:name=".activity.TellPhoneActivity"
            android:theme="@style/CommonViewStyle">
        </activity>
        <activity
            android:name=".activity.ContactsActivity"
            android:theme="@style/CommonViewStyle">
        </activity>

        <service
            android:name="com.qzy.tt.phone.service.TtPhoneService"
            android:enabled="true"
            android:exported="true">
        </service>

        <activity
            android:name=".activity.AddContactsActivity"
            android:theme="@style/CommonViewStyle">
        </activity>
        <activity
            android:name=".activity.SendShortMessageActivity"
            android:theme="@style/CommonViewStyle"
            android:windowSoftInputMode="stateVisible|adjustResize|stateHidden">
        </activity>
        <activity
            android:name=".activity.SelectContactsActivity"
            android:theme="@style/CommonViewStyle">
        </activity>
        <activity android:name=".activity.DeleteContactsActivity">
        </activity>
        <receiver android:name=".receiver.WifiReceiver">
            <intent-filter >
                <action android:name="android.net.wifi.RSSI_CHANGED"/>
                <action android:name="android.net.wifi.STATE_CHANGE"/>
                <action android:name="android.net.wifi.WIFI_STATE_CHANGED"/>
            </intent-filter>
        </receiver>
    </application>

</manifest>